  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node .",
    "start:watch": "node --watch .",
    "start:debug": "node --inspect .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:unit": "jest --watchAll --testMatch='**/__tests__/unit/**/*.test.ts'",
    "test:integration": "jest --watchAll --testMatch='**/__tests__/integration/**/*.test.ts'",
    "test:e2e": "jest --watchAll --testMatch='**/__tests__/e2e/**/*.test.ts'",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,__tests__}/**/*.ts\"",
    "lint:fix": "eslint \"{src,__tests__}/**/*.ts\" --fix"
  },
  "author": "Hossein Najafi <hsn0najafi@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0"
  }
}
